<UserControl 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Alphora.Dataphor.Frontend.Client.Silverlight.ConnectLogin" 
	d:DesignWidth="240">
	
	<StackPanel x:Name="LayoutRoot">
		<TextBlock Text="User Name"/>
		<TextBox x:Name="UserNameBox" Text="{Binding UserName, Mode=TwoWay, UpdateSourceTrigger=Explicit}" MinWidth="200" HorizontalAlignment="Left" TextChanged="TextBox_TextChanged" />
		<TextBlock Text="Password"/>
		<PasswordBox Password="{Binding Password, Mode=TwoWay}" MinWidth="150" HorizontalAlignment="Left" />
		<Grid Margin="0,4,0,0">
			<Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Right" Click="Button_Click" />
		</Grid>
		<Border x:Name="ErrorBorder" BorderBrush="#FFF44747" BorderThickness="1" CornerRadius="4" Margin="0,4,0,0" Visibility="Collapsed">
			<TextBox x:Name="ErrorText" TextWrapping="Wrap" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" BorderThickness="0" Foreground="#FFC10000" ScrollViewer.VerticalScrollBarVisibility="Auto" IsTabStop="False"/>
		</Border>
	</StackPanel>
</UserControl>