<navigation:Page 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
	x:Class="Frontend.Client.Silverlight.ConnectInstances" 
	Title="Connection - Instances"
	d:DesignWidth="240" d:DesignHeight="180">
	
	<StackPanel x:Name="LayoutRoot">
		<ListBox x:Name="InstanceListBox" ItemsSource="{Binding Instances}"/>
		<Grid Margin="0,4,0,0">
			<Button Content="Connect" HorizontalAlignment="Right" Click="Button_Click" />
		</Grid>
	</StackPanel>
</navigation:Page>