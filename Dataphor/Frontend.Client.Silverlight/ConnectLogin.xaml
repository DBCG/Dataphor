<navigation:Page 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
	x:Class="Frontend.Client.Silverlight.ConnectLogin" 
	Title="Connection - Login"
	d:DesignWidth="240">
	
	<StackPanel x:Name="LayoutRoot">
		<TextBlock Text="User Name"/>
		<TextBox x:Name="UserNameTextBox" MinWidth="200" HorizontalAlignment="Left" TextChanged="UserNameTextBox_TextChanged"/>
		<TextBlock Text="Password"/>
		<PasswordBox x:Name="PasswordTextBox" MinWidth="150" HorizontalAlignment="Left" PasswordChanged="PasswordTextBox_PasswordChanged"/>
		<Grid Margin="0,4,0,0">
			<Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Right" Click="Button_Click" />
		</Grid>
	</StackPanel>
</navigation:Page>